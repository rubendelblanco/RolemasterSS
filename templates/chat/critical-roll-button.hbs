<h5><img src="{{attacker.img}}" alt="{{attacker.name}}" width="50" height="50"> {{attacker.name}} {{ localize "rmss.combat.attacks" }}</h5>
<h6>{{damageStr}}</h6>
{{#each criticals}}
  <button class="chat-critical-roll"
          type="button"
          data-attacker="{{../attacker.id}}"
          data-damage="{{damage}}"
          data-severity="{{severity}}"
          data-crittype="{{critType}}">
    {{localize "rmss.combat.critical_roll"}} {{inc @index}}
    ({{critType}}/{{severity}})
  </button>
{{/each}}
