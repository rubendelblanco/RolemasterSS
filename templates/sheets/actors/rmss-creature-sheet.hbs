<form class="npc-sheet {{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <div class="container">

            <!-- Actor Icon Section-->
            <div>
                <div class="actor-icon">
                    <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="64" width="64"/>
                </div>
            </div>
            <div class="resource-container">

                <div class="resource-entry">
                    {{ localize "rmss.player_character.resources.hits" }}
                    <h4><input type="text" name="system.attributes.hits.current" data-dtype="Number" value="{{system.attributes.hits.current}}"/>/<input type="text" name="system.attributes.hits.max" data-dtype="Number" value="{{system.attributes.hits.max}}"/></h4>
                    {{ localize "rmss.npc.at" }}/{{ localize "rmss.npc.db" }}
                    <h4>
                        <input type="text" name="system.armor_info.armor_type" data-dtype="Number" value="{{system.armor_info.armor_type}}"/>/
                        <input type="text" name="system.armor_info.total_db" data-dtype="Number" value="{{system.armor_info.total_db}}"/>
                    </h4>
                </div>
                <div class="resource-entry">
                    <div class="pp-resources">
                        {{ localize "rmss.player_character.resources.power_points" }}
                        <h4><input name="system.attributes.power_points.current" type="Number" value="{{system.attributes.power_points.current}}"/>/<input name="system.attributes.power_points.max" type="Number" value="{{system.attributes.power_points.max}}"/></h4>
                    </div>
                    {{ localize "rmss.npc.movement_rate" }}
                    <h4>
                        <input type="text" name="system.attributes.movement_rate.current" data-dtype="Number" value="{{system.attributes.movement_rate.current}}"/>
                    </h4>
                </div>
            </div>

            <!-- Name, XP and Level Section-->

            <div class="header-container">
                <div class="header-text">
                    <label for="character-name">{{ localize "rmss.player_character.name" }}</label>
                    <input id="character-name" name="name" type="text" value="{{actor.name}}" placeholder="{{ localize Name }}"/>
                </div>

                <div class="header-text flexrow">
                    <label for="level">{{ localize "rmss.player_character.level" }}</label>
                    <input id="level" name="system.attributes.level.value" type="text" value="{{system.attributes.level.value}}"/>
                </div>
                <div class="header-text flexrow">
                    <label for="bonus-experience">{{ localize "rmss.creature.bonus_experience" }}</label>
                    <select id="bonus-experience" name="system.bonus_experience">
                        <option value="none" {{#if (eq system.bonus_experience "none")}}selected{{/if}}>-</option>
                        <option value="a" {{#if (eq system.bonus_experience "a")}}selected{{/if}}>A</option>
                        <option value="b" {{#if (eq system.bonus_experience "b")}}selected{{/if}}>B</option>
                        <option value="c" {{#if (eq system.bonus_experience "c")}}selected{{/if}}>C</option>
                        <option value="d" {{#if (eq system.bonus_experience "d")}}selected{{/if}}>D</option>
                        <option value="e" {{#if (eq system.bonus_experience "e")}}selected{{/if}}>E</option>
                        <option value="f" {{#if (eq system.bonus_experience "f")}}selected{{/if}}>F</option>
                        <option value="g" {{#if (eq system.bonus_experience "g")}}selected{{/if}}>G</option>
                        <option value="h" {{#if (eq system.bonus_experience "h")}}selected{{/if}}>H</option>
                        <option value="i" {{#if (eq system.bonus_experience "i")}}selected{{/if}}>I</option>
                        <option value="j" {{#if (eq system.bonus_experience "j")}}selected{{/if}}>J</option>
                        <option value="k" {{#if (eq system.bonus_experience "k")}}selected{{/if}}>K</option>
                        <option value="l" {{#if (eq system.bonus_experience "l")}}selected{{/if}}>L</option>
                    </select>
                </div>
                <div class="header-text flexrow">
                    <label for="level">{{ localize "rmss.creature.treasure" }}</label>
                    <input id="level" name="system.treasure" type="text" value="{{system.treasure}}" data-dtype="String"/>
                </div>
            </div>

        </div>
    </header>
    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="Skills">{{ localize "rmss.pc_sheet_tabs.attacks" }}</a>
        <a class="item" data-tab="Equipment">{{ localize "rmss.pc_sheet_tabs.equipment" }}</a>
        <a class="item" data-tab="Spells">{{ localize "rmss.pc_sheet_tabs.spells" }}</a>
        <a class="item" data-tab="StatusRecord">{{ localize "rmss.pc_sheet_tabs.status_record" }}</a>
    </nav>
    <section class="sheet-body">
        <div class="tab skills" data-group="primary" data-tab="Skills">
            {{> "systems/rmss/templates/sheets/actors/parts/creature-attacks.hbs" }}
        </div>
        <div class="tab equipment" data-group="primary" data-tab="Equipment">
            <div class="container">
                <div class="equipment-container">
                    <h2>Weapons</h2>
                    {{> "systems/rmss/templates/sheets/actors/parts/actor-weapons.html" }}
                    <h2>Items</h2>
                    {{> "systems/rmss/templates/sheets/actors/parts/actor-items.html" }}
                    <h2>Armor and Equipables</h2>
                    {{> "systems/rmss/templates/sheets/actors/parts/actor-armor.html" }}
                    <h2>Herbs and Poisons</h2>
                    {{> "systems/rmss/templates/sheets/actors/parts/actor-herbs.html" }}
                </div>
            </div>
        </div>
        <div class="tab status-record" data-group="primary" data-tab="StatusRecord">
            {{> "systems/rmss/templates/sheets/actors/rmss-critical-codes.hbs" }}
            {{> "systems/rmss/templates/sheets/actors/parts/active-effects.hbs" }}
        </div>
    </section>
</form>