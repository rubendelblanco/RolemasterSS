<div class="panelBorder sheet-card">
    <h2>{{localize "rmss.effects.effects"}}</h2>
    <div class="effects-list">
        <div class="effect-grid-heading">Name</div>
        <div class="effect-grid-heading">Duration</div>
        <div class="effect-grid-heading">Actions</div>
        <div class="effect-grid-heading">
            <a class="effect-control" data-action="create">
                Add effect <i class="fas fa-plus"></i>
            </a>
        </div>
        {{#each effects as |effect|}}
                <div class="active-effect effect-name">
                    {{effect.name}}
                </div>
                <div class="active-effect effect-duration">
                    {{effect.duration.rounds}}
                </div>
                <div class="active-effect effect-controls">
                    <a class="effect-control edit" data-effect-id="{{effect._id}}" data-action="edit" title="Edit Effect">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="effect-control edit-flags" data-effect-id="{{effect._id}}" data-action="edit-flags" title="Edit Flags">
                        <i class="fas fa-flag"></i>
                    </a>
                    <a class="effect-control delete" data-effect-id="{{effect._id}}" data-action="delete" title="Delete Effect">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            <div class="active-effect effect-create"></div>
        {{/each}}
    </div>
</div>
