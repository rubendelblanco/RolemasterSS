<div class="skills-grid-container-npc">
    <div class="skills-grid-heading"></div>
    <div class="skills-grid-heading">{{ localize "rmss.pc_sheet_skills.skill_name" }}</div>
    <div class="skills-grid-heading">{{ localize "rmss.pc_sheet_skills.rank_bonus" }}</div>
    <div class="skills-grid-heading">{{ localize "rmss.pc_sheet_skills.item_bonus" }}</div>
    <div class="skills-grid-heading">{{ localize "rmss.pc_sheet_skills.special_bonus" }}</div>
    <div class="skills-grid-heading">{{ localize "rmss.pc_sheet_skills.total_bonus" }}</div>
    <div class="skills-grid-heading"></div>
    {{#each playerskill as |skill id|}}
        <div class="npc-skill-calc">
            <div data-item-id="{{skill._id}}"><img src="{{skill.img}}" alt="{{skill.name}}"></div>
            {{#if (eq skill.system.offensive_skill "none" )}}
                <div class="skills-name-left-align"><a class="item-roll" title="Roll Check" data-item-type="none" data-item-id="{{skill._id}}">{{skill.name}}<i class="fas fa-dice"></i></a></div>
            {{else if (eq skill.system.offensive_skill "melee")}}
                <div class="skills-name-left-align"><a class="item-roll" title="Roll Check" data-item-type="melee" data-item-id="{{skill._id}}">{{skill.name}}<i class="fa-solid fa-sword"></i></a></div>
            {{else if (eq skill.system.offensive_skill "missile")}}
                <div class="skills-name-left-align"><a class="item-roll" title="Roll Check" data-item-type="missile" data-item-id="{{skill._id}}">{{skill.name}}<i class="fa-solid fa-bow-arrow"></i></a></div>
            {{else if (eq skill.system.offensive_skill "spell")}}
                <div class="skills-name-left-align"><a class="item-roll" title="Roll Check" data-item-type="spell" data-item-id="{{skill._id}}">{{skill.name}}<i class="fa-solid fa-wand-sparkles"></i></a></div>
            {{else if (eq skill.system.offensive_skill "area")}}
                <div class="skills-name-left-align"><a class="item-roll" title="Roll Check" data-item-type="area" data-item-id="{{skill._id}}">{{skill.name}}<i class="fa-solid fa-explosion"></i></a></div>
            {{else if (eq skill.system.offensive_skill "base")}}
                <div class="skills-name-left-align"><a class="item-roll" title="Roll Check" data-item-type="base" data-item-id="{{skill._id}}">{{skill.name}}<i class="fa-solid fa-hand-sparkles"></i></a></div>
            {{else}}
                {{skill.name}}
            {{/if}}
            <div class="npc-item-rank-bonus" contenteditable="true" data-item-id="{{skill._id}}">{{skill.system.rank_bonus}}</div>
            <div class="npc-item-bonus" contenteditable="true" data-item-id="{{skill._id}}">{{skill.system.item_bonus}}</div>
            <div class="npc-item-special-bonus-1" contenteditable="true" data-item-id="{{skill._id}}">{{skill.system.special_bonus_1}}</div>
            <div class="npc-item-total-bonus" data-item-id="{{skill._id}}" contenteditable="true">{{skill.system.total_bonus}}</div>
            <div>
                <a class="item-delete" title="Delete Skill" data-item-id="{{skill._id}}"><i class="fas fa-trash"></i></a>
            </div>
        </div>
    {{/each}}
</div>