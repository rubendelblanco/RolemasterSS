<div class="critical-codes">
    <h2>{{localize "rmss.creature.critical_codes.title"}}</h2>

    <div class="critical-row" style="display:flex; gap:1rem; justify-content:space-between;">

        <!-- Critical Procedure -->
        <div class="critical-column" style="flex:1;">
            <h3 style="margin-bottom:4px;">
                {{localize "rmss.creature.critical_codes.critical_procedure.title"}}
            </h3>
            <select name="system.attributes.critical_codes.critical_procedure" style="width:100%;">
                <option value="-"  {{#if (eq system.attributes.critical_codes.critical_procedure "-")}}selected{{/if}}>
                    {{localize "rmss.creature.critical_codes.critical_procedure.normal"}}
                </option>
                <option value="I"  {{#if (eq system.attributes.critical_codes.critical_procedure "I")}}selected{{/if}}>
                    {{localize "rmss.creature.critical_codes.critical_procedure.minus1"}}
                </option>
                <option value="II" {{#if (eq system.attributes.critical_codes.critical_procedure "II")}}selected{{/if}}>
                    {{localize "rmss.creature.critical_codes.critical_procedure.minus2"}}
                </option>
            </select>
        </div>

        <!-- Critical Table -->
        <div class="critical-column" style="flex:1;">
            <h3 style="margin-bottom:4px;">
                {{localize "rmss.creature.critical_codes.critical_table.title"}}
            </h3>
            <select name="system.attributes.critical_codes.critical_table" style="width:100%;">
                <option value="-"  {{#if (eq system.attributes.critical_codes.critical_table "-")}}selected{{/if}}>
                    {{localize "rmss.creature.critical_codes.critical_table.normal"}}
                </option>
                <option value="la" {{#if (eq system.attributes.critical_codes.critical_table "la")}}selected{{/if}}>
                    {{localize "rmss.creature.critical_codes.critical_table.large"}}
                </option>
                <option value="sl" {{#if (eq system.attributes.critical_codes.critical_table "sl")}}selected{{/if}}>
                    {{localize "rmss.creature.critical_codes.critical_table.superlarge"}}
                </option>
            </select>
        </div>

        <!-- Stun & Bleeding -->
        <div class="critical-column" style="flex:1;">
            <h3 style="margin-bottom:4px;">
                {{localize "rmss.creature.critical_codes.stun_bleeding.title"}}
            </h3>
            <select name="system.attributes.critical_codes.stun_bleeding" style="width:100%;">
                <option value="-"       {{#if (eq system.attributes.critical_codes.stun_bleeding "-")}}selected{{/if}}>
                    {{localize "rmss.creature.critical_codes.stun_bleeding.normal"}}
                </option>
                <option value="stun"    {{#if (eq system.attributes.critical_codes.stun_bleeding "stun")}}selected{{/if}}>
                    {{localize "rmss.creature.critical_codes.stun_bleeding.ignore_stun"}}
                </option>
                <option value="bleeding" {{#if (eq system.attributes.critical_codes.stun_bleeding "bleeding")}}selected{{/if}}>
                    {{localize "rmss.creature.critical_codes.stun_bleeding.ignore_both"}}
                </option>
            </select>
        </div>

    </div>
</div>
