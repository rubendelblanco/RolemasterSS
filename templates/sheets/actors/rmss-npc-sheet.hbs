<form class="npc-sheet {{cssClass}}" autocomplete="off">
    <header class="sheet-header">
      <div class="container">

      <!-- Actor Icon Section-->
      <div>
        <div class="actor-icon">
          <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="64" width="64"/>
        </div>
      </div>
      <div class="resource-container">

        <div class="resource-entry">
          {{ localize "rmss.player_character.resources.hits" }}
          <h4><input type="text" name="system.attributes.hits.current" data-dtype="Number" value="{{system.attributes.hits.current}}"/>/<input type="text" name="system.attributes.hits.max" data-dtype="Number" value="{{system.attributes.hits.max}}"/></h4>
            {{ localize "rmss.npc.at" }}/{{ localize "rmss.npc.db" }}
            <h4>
                <input type="text" name="system.armor_info.armor_type" data-dtype="Number" value="{{system.armor_info.armor_type}}"/>/
                <input type="text" name="system.armor_info.total_db" data-dtype="Number" value="{{system.armor_info.total_db}}"/>
            </h4>
        </div>
        <div class="resource-entry">
          <div class="pp-resources">
            {{ localize "rmss.player_character.resources.power_points" }}
            <h4><input name="system.attributes.power_points.current" type="Number" value="{{system.attributes.power_points.current}}"/>/<input name="system.attributes.power_points.max" type="Number" value="{{system.attributes.power_points.max}}"/></h4>
          </div>
            <label for="movement-rate-value"><a class="item-roll"> {{ localize "rmss.npc.movement_rate" }}
                <i class="fa fa-refresh" aria-hidden="true"></i></a>
            </label>
            <h4>
                <input type="text" name="system.attributes.movement_rate.value" data-dtype="Number" value="{{system.attributes.movement_rate.value}}"/>/
                <input id="movement-rate-current"
                       name="system.attributes.movement_rate.current"
                       data-dtype="Number"
                       type="text"
                       value="{{system.attributes.movement_rate.current}}"
                />
            </h4>
        </div>
      </div>

      <!-- Name, XP and Level Section-->

      <div class="header-container">
        <div class="header-text">
          <label for="character-name">{{ localize "rmss.player_character.name" }}</label>
          <input id="character-name" name="name" type="text" value="{{actor.name}}" placeholder="{{ localize Name }}"/>
        </div>

        <div class="header-text flexrow">
          <label for="level">{{ localize "rmss.player_character.level" }}</label>
          <input id="level" name="system.attributes.level.value" type="text" value="{{system.attributes.level.value}}"/>
        </div>

          <div class="header-text flexrow">
              <label for="race">{{ localize "rmss.pc_sheet_fixed_info.race" }} </label>
              <input id="race" type="text" name="system.fixed_info.race" value="{{system.fixed_info.race}}" data-dtype="String"/>
          </div>
          <div class="header-text flexrow">
              <label for="profession">{{ localize "rmss.pc_sheet_fixed_info.profession" }}  </label>
              <input id="profession" type="text" name="system.fixed_info.profession" value="{{system.fixed_info.profession}}" data-dtype="String"/>
          </div>
      </div>

    </div>
  </header>
    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="Skills"><i class="fa fa-cogs" aria-hidden="true"></i>{{ localize "rmss.pc_sheet_tabs.skills" }}</a>
        <a class="item" data-tab="Equipment"><i class="fa-solid fa-backpack"></i>{{ localize "rmss.pc_sheet_tabs.equipment" }}</a>
        <a class="item" data-tab="Spells"><i class="fa-solid fa-scroll"></i>{{ localize "rmss.pc_sheet_tabs.spells" }}</a>
        <a class="item" data-tab="StatusRecord"><i class="fa-solid fa-person-rays"></i>{{ localize "rmss.pc_sheet_tabs.status_record" }}</a>
    </nav>
    <section class="sheet-body">
        <div class="tab skills" data-group="primary" data-tab="Skills">
            {{> "systems/rmss/templates/sheets/actors/parts/npc-skills.hbs" }}
        </div>
        <div class="tab equipment" data-group="primary" data-tab="Equipment">
            <div class="container">
                <div class="equipment-container">
                    <h2>Weapons</h2>
                    {{> "systems/rmss/templates/sheets/actors/parts/actor-weapons.html" }}
                    <h2>Items</h2>
                    {{> "systems/rmss/templates/sheets/actors/parts/actor-items.html" }}
                    <h2>Armor and Equipables</h2>
                    {{> "systems/rmss/templates/sheets/actors/parts/actor-armor.html" }}
                    <h2>Herbs and Poisons</h2>
                    {{> "systems/rmss/templates/sheets/actors/parts/actor-herbs.html" }}
                </div>
            </div>
        </div>
        <div class="tab status-record" data-group="primary" data-tab="StatusRecord">
            {{> "systems/rmss/templates/sheets/actors/rmss-critical-codes.hbs" }}
            {{> "systems/rmss/templates/sheets/actors/parts/active-effects.hbs" }}
        </div>
        <div class="tab spells" data-group="primary" data-tab="Spells">
            {{> "systems/rmss/templates/sheets/actors/parts/actor-spells.html" }}
        </div>
    </section>
</form>